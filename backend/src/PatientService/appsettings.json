{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres-patient;Port=5432;Database=patientdb;Username=postgres;Password=postgres123"
  },
  "Spring": {
    "Application": {
      "Name": "patient-service"
    }
  },
  "Eureka": {
    "Client": {
      "ServiceUrl": "http://eureka-server:8761/eureka/",
      "ShouldRegisterWithEureka": true,
      "ShouldFetchRegistry": true
    },
    "Instance": {
      "Port": 5001,
      "HostName": "patient-service",
      "HealthCheckUrlPath": "/api/patients/health",
      "StatusPageUrlPath": "/swagger"
    }
  },
  "Kafka": {
    "BootstrapServers": "kafka:9092"
  },
  "Keycloak": {
    "Authority": "http://keycloak:8080/realms/hospital",
    "Audience": "hospital-api"
  }
}
